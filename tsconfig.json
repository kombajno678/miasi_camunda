{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "target": "ES6",

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "static",
    "typings/browser.d.ts",
    "typings/browser/**"
  ]
}
